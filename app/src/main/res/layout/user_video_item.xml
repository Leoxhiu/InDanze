<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/userVideoImage"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/ic_video_library"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/userVideoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userVideoImage"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Video Name"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_below="@id/userVideoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_updateVideo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_deleteVideo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/delete_video"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>